@using GymSite.Models;
@{
    ViewData["Title"] = "Add new trainer";
}
@model Trainer;

<h2>@ViewData["Title"]</h2>

<table>
@using(Html.BeginForm("AddTrainer","Home", Model, FormMethod.Post)){
    <tr>
        <td>
            @Html.LabelFor(x => x.LastName, "Last name")
        </td>
        <td>
            @Html.EditorFor(x => x.LastName)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.FirstName, "First name")
        </td>
        <td>
            @Html.EditorFor(x => x.FirstName)
        </td>
    </tr>
    <tr>
        <td colspan=2>
        <input type="submit" class="btn btn-outline-dark" value="Add trainer" />
        <td>
    </tr>
}
</table>